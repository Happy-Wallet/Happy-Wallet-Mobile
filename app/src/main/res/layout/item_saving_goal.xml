<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="94dp"
    android:layout_height="86dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="86dp"
        android:layout_height="86dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/bg_rounded_20_white">

        <FrameLayout
            android:layout_width="46dp"
            android:layout_height="46dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="7dp"

            android:id="@+id/flIconBackground"

            android:background="@drawable/bg_rounded_50_nautical"/>

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            app:layout_constraintStart_toStartOf="@id/flIconBackground"
            app:layout_constraintEnd_toEndOf="@id/flIconBackground"
            app:layout_constraintTop_toTopOf="@id/flIconBackground"
            app:layout_constraintBottom_toBottomOf="@id/flIconBackground"

            android:id="@+id/ivIcon"

            android:backgroundTint="@color/transparent"/>

        <TextView
            android:layout_width="80dp"
            android:layout_height="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivIcon"
            android:layout_marginTop="7dp"

            android:id="@+id/tvTitle"

            android:gravity="center"
            android:text="Title"
            android:fontFamily="@font/poppins_medium_500"
            android:textSize="12sp"
            />

        <ProgressBar
            android:layout_width="70dp"
            android:layout_height="8dp"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="2dp"

            android:id="@+id/pbProgress"

            android:max="100"
            android:progress="50"

            style="@android:style/Widget.ProgressBar.Horizontal"
            android:progressDrawable="@drawable/progressbar_green_white"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>


    
</androidx.constraintlayout.widget.ConstraintLayout>