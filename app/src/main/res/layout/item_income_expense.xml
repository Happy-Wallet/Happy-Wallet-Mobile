<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:padding="4dp"
    android:layout_marginEnd="15dp">

    <LinearLayout
        android:id="@+id/linearColumnContainer"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:gravity="bottom"
        app:layout_constraintBottom_toTopOf="@+id/tvMonth"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/viewIncome"
            android:layout_width="12dp"
            android:layout_height="0dp"
            android:layout_gravity="bottom"
            android:background="@drawable/bg_column_income"
            android:layout_marginEnd="4dp" />

        <View
            android:id="@+id/viewExpense"
            android:layout_width="12dp"
            android:layout_height="0dp"
            android:layout_gravity="bottom"
            android:background="@drawable/bg_column_expense" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvMonth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4/2025"
        android:textSize="12sp"
        android:textColor="#333"
        app:layout_constraintTop_toBottomOf="@id/linearColumnContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="6dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
