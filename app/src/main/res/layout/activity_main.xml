<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.Activity.MainActivity"
    android:background="@color/Nautical">

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="66dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="20dp"
        android:id="@+id/clMenu"

        android:background="@drawable/bg_rounded_20_white"
        >

        <!-- Home button -->
        <ImageView
            android:layout_width="53dp"
            android:layout_height="53dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/ivWallet"
            android:id="@+id/ivHome"

            android:src="@drawable/ic_house"
            android:padding="7dp"
            android:background="@drawable/bg_rounded_20_paolo_veronese_green"
            />

        <!-- Wallet button -->
        <ImageView
            android:layout_width="53dp"
            android:layout_height="53dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/ivHome"
            app:layout_constraintRight_toLeftOf="@id/ivChat"
            android:id="@+id/ivWallet"

            android:src="@drawable/ic_wallet"
            android:padding="7dp"
            android:background="@drawable/bg_rounded_20_paolo_veronese_green"
            />

        <!-- chat button -->
        <ImageView
            android:layout_width="61dp"
            android:layout_height="61dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/ivWallet"
            app:layout_constraintRight_toLeftOf="@id/ivGroups"
            android:layout_marginBottom="20dp"
            android:id="@+id/ivChat"

            android:background="@drawable/bg_rounded_50_white"
            />
        
        <!-- Groups button -->
        <ImageView
            android:layout_width="53dp"
            android:layout_height="53dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/ivChat"
            app:layout_constraintRight_toLeftOf="@id/ivSetting"
            android:id="@+id/ivGroups"

            android:src="@drawable/ic_users_three"
            android:padding="7dp"
            android:background="@drawable/bg_rounded_20_paolo_veronese_green"
            />

        <!-- Setting button -->
        <ImageView
            android:layout_width="53dp"
            android:layout_height="53dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/ivGroups"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/ivSetting"

            android:src="@drawable/ic_gear_six"
            android:padding="7dp"
            android:background="@drawable/bg_rounded_20_paolo_veronese_green"
            />
        
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- chat button real -->
    <ImageView
        android:layout_width="61dp"
        android:layout_height="61dp"
        app:layout_constraintTop_toTopOf="@id/clMenu"
        app:layout_constraintBottom_toBottomOf="@id/clMenu"
        app:layout_constraintRight_toRightOf="@id/clMenu"
        app:layout_constraintLeft_toLeftOf="@id/clMenu"
        android:layout_marginBottom="20dp"
        android:id="@+id/ivChatBot"

        android:src="@drawable/ic_chats_circle"
        android:padding="7dp"
        android:background="@drawable/bg_rounded_50_paolo_veronese_green"
        />

</androidx.constraintlayout.widget.ConstraintLayout>