<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.Activity.MainActivity"
    android:background="@color/Nautical">

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="66dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="20dp"
        android:id="@+id/clMenu"

        android:background="@drawable/bg_rounded_20_white"
        >

        <!-- Home button -->
        <TextView
            android:layout_width="53dp"
            android:layout_height="53dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/tvWallet"
            android:id="@+id/tvHome"

            android:gravity="center"
            android:lineSpacingExtra="0dp"
            android:lineSpacingMultiplier="0.8"
            android:background="@drawable/bg_rounded_20_paolo_veronese_green"
            />

        <!-- Wallet button -->
        <TextView
            android:layout_width="53dp"
            android:layout_height="53dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/tvHome"
            app:layout_constraintRight_toLeftOf="@id/tvChat"
            android:id="@+id/tvWallet"

            android:gravity="center"
            android:lineSpacingExtra="0dp"
            android:lineSpacingMultiplier="0.8"
            android:background="@drawable/bg_rounded_20_paolo_veronese_green"
            />

        <!-- chat button -->
        <TextView
            android:layout_width="61dp"
            android:layout_height="61dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/tvWallet"
            app:layout_constraintRight_toLeftOf="@id/tvGroups"
            android:layout_marginBottom="20dp"
            android:id="@+id/tvChat"

            android:gravity="center"

            android:background="@drawable/bg_rounded_50_white"
            />
        
        <!-- Groups button -->
        <TextView
            android:layout_width="53dp"
            android:layout_height="53dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/tvChat"
            app:layout_constraintRight_toLeftOf="@id/tvSetting"
            android:id="@+id/tvGroups"

            android:gravity="center"
            android:lineSpacingExtra="0dp"
            android:lineSpacingMultiplier="0.8"
            android:background="@drawable/bg_rounded_20_paolo_veronese_green"
            />

        <!-- Setting button -->
        <TextView
            android:layout_width="53dp"
            android:layout_height="53dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/tvGroups"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/tvSetting"

            android:gravity="center"
            android:lineSpacingExtra="0dp"
            android:lineSpacingMultiplier="0.8"
            android:background="@drawable/bg_rounded_20_paolo_veronese_green"
            />
        
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- chat button real -->
    <TextView
        android:layout_width="61dp"
        android:layout_height="61dp"
        app:layout_constraintTop_toTopOf="@id/clMenu"
        app:layout_constraintBottom_toBottomOf="@id/clMenu"
        app:layout_constraintRight_toRightOf="@id/clMenu"
        app:layout_constraintLeft_toLeftOf="@id/clMenu"
        android:layout_marginBottom="20dp"
        android:id="@+id/tvChatBot"

        android:gravity="center"
        android:text="\uE17E"
        android:fontFamily="@font/phosphor_regular"
        android:textSize="40sp"
        android:textColor="@color/white"

        android:background="@drawable/bg_rounded_50_paolo_veronese_green"
        />

</androidx.constraintlayout.widget.ConstraintLayout>