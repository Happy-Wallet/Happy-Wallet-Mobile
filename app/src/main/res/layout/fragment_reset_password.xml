<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/Silver_Phoenix">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center"
        android:padding="24dp">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset Password"
            android:textSize="26sp"
            android:textColor="@color/Paolo_Veronese_Green"
            android:fontFamily="@font/poppins_extrabold_800"
            android:layout_marginBottom="32dp" />

        <!-- OTP input -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter the 4-digit OTP sent to your email"
            android:textSize="16sp"
            android:fontFamily="@font/poppins_semibold_600"
            android:layout_marginBottom="6dp" />

        <EditText
            android:id="@+id/etOtp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="OTP"
            android:inputType="number"
            android:maxLength="4"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textSize="16sp"
            android:background="@drawable/bg_rounded_20_white"
            android:fontFamily="@font/poppins_semibold_600"
            android:elevation="4dp"
            android:layout_marginBottom="16dp" />

        <!-- New password -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter your new password"
            android:textSize="16sp"
            android:fontFamily="@font/poppins_semibold_600"
            android:layout_marginBottom="6dp" />

        <EditText
            android:id="@+id/etNewPassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="New Password"
            android:inputType="textPassword"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textSize="16sp"
            android:background="@drawable/bg_rounded_20_white"
            android:fontFamily="@font/poppins_semibold_600"
            android:elevation="4dp"
            android:layout_marginBottom="16dp" />

        <!-- Confirm password -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirm your new password"
            android:textSize="16sp"
            android:fontFamily="@font/poppins_semibold_600"
            android:layout_marginBottom="6dp" />

        <EditText
            android:id="@+id/etConfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textSize="16sp"
            android:background="@drawable/bg_rounded_20_white"
            android:fontFamily="@font/poppins_semibold_600"
            android:elevation="4dp"
            android:layout_marginBottom="32dp" />

        <!-- Reset password button -->
        <TextView
            android:id="@+id/tvResetPassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_rounded_50_paolo_veronese_green"
            android:backgroundTint="@color/Paolo_Veronese_Green"
            android:elevation="4dp"
            android:fontFamily="@font/poppins_semibold_600"
            android:gravity="center"
            android:text="Reset Password"
            android:textColor="@color/white"
            android:textSize="18sp" />

    </LinearLayout>
</ScrollView>
