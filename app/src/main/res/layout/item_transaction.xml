<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:layout_width="42dp"
        android:layout_height="42dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"

        android:id="@+id/flIconBackground"

        android:background="@drawable/bg_rounded_50_paolo_veronese_green">

        <ImageView
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:layout_gravity="center"

            android:id="@+id/ivIcon"

            app:tint="@color/white"
            android:src="@drawable/ic_users_three"
            />

    </FrameLayout>

    <!-- title -->
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/flIconBackground"
        app:layout_constraintEnd_toStartOf="@id/tvAmount"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="7dp"

        android:id="@+id/tvTitle"

        android:ellipsize="end"
        android:maxLines="1"
        android:text="lunch"
        android:fontFamily="@font/poppins_semibold_600"
        android:textSize="16sp"
        android:textColor="@color/Paolo_Veronese_Green"
        />

    <!-- detail -->
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/flIconBackground"
        app:layout_constraintEnd_toStartOf="@id/tvAmount"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="7dp"

        android:id="@+id/tvDetail"

        android:ellipsize="end"
        android:maxLines="1"
        android:text="Bun bo cham nuoc mam sieu ngon ba chay bo chet"
        android:fontFamily="@font/poppins_regular_400"
        android:textSize="14sp"
        android:textColor="@color/Paolo_Veronese_Green"
        />

    <!-- amount -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:id="@+id/tvAmount"

        android:maxLines="1"
        android:text="-150.000"
        android:fontFamily="@font/poppins_semibold_600"
        android:textSize="15sp"
        android:textColor="@color/Radishical"
        />

    <!-- line -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/flIconBackground"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"

        android:background="@drawable/bg_rounded_50_nautical"
        />

</androidx.constraintlayout.widget.ConstraintLayout>