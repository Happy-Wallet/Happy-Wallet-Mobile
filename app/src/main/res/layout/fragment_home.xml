<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="#FFFFFF"
    tools:context=".View.Fragment.HomeFragment">

<!-- notification button -->
    <FrameLayout
        android:layout_width="36dp"
        android:layout_height="36dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/flNotification"

        android:layout_marginTop="52dp"
        android:layout_marginRight="30dp"

        android:padding="2dp"
        android:foregroundGravity="center"

        android:background="@drawable/bg_rounded_50_nautical"

        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:gravity="center"
            android:fontFamily="@font/phosphor"
            android:text="\uE0CE"
            android:textSize="31sp"
            android:textColor="@color/Nautical"

            android:background="@drawable/bg_rounded_50_white"
            />

    </FrameLayout>


<!-- Total balance | Available balance -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        android:text="Total balance | Available balance"
        android:textFontWeight="400"
        android:textSize="16sp"
        android:lineHeight="22sp"

        android:layout_marginTop="73dp"
        android:layout_marginLeft="24dp"
        />

    <!-- Account Balance -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/tvAccountBalance"

        android:text="7.783.000 $"
        android:textFontWeight="700"
        android:textSize="24sp"
        android:lineHeight="22sp"
        android:textColor="#00D09E"

        android:layout_marginTop="103dp"
        android:layout_marginLeft="24dp"/>

    <!-- Detail backgoround -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/vDetailBG"


        android:background="@drawable/bg_rounded_50_white"
        android:backgroundTint="#ECEEF6"

        android:layout_marginTop="137dp"
        />

    <!-- "Month Income and expenditure" -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/vDetailBG"
        app:layout_constraintBottom_toTopOf="@+id/vMonthIAEBG"

        android:text="Month Income and expenditure"
        android:textFontWeight="600"
        android:textSize="15sp"
        android:lineHeight="22sp"
        android:textColor="#30437A"

        android:layout_marginBottom="7dp"
        android:layout_marginLeft="24dp"
        />

    <!-- background month income ... -->
    <View
        android:layout_width="match_parent"
        android:layout_height="130dp"
        app:layout_constraintTop_toTopOf="@+id/vDetailBG"
        app:layout_constraintLeft_toLeftOf="@id/vDetailBG"
        app:layout_constraintRight_toRightOf="@id/vDetailBG"
        android:id="@+id/vMonthIAEBG"

        android:background="@drawable/bg_rounded_20_white"
        android:backgroundTint="#FFFFFF"

        android:layout_marginTop="41dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        />

    <!-- recycalerview Month IAE -->
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="130dp"
        app:layout_constraintTop_toTopOf="@+id/vMonthIAEBG"
        app:layout_constraintLeft_toLeftOf="@id/vMonthIAEBG"
        app:layout_constraintRight_toRightOf="@+id/vMonthIAEBG"
        app:layout_constraintBottom_toBottomOf="@+id/vMonthIAEBG"
        android:id="@+id/rcvMonthIAE"

        android:importantForAccessibility="no"
        />

    <!-- "Saving Goals" -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/vDetailBG"
        app:layout_constraintBottom_toTopOf="@+id/rcvSavingGoals"

        android:text="Saving Goals"
        android:textFontWeight="600"
        android:textSize="15sp"
        android:lineHeight="22sp"
        android:textColor="#30437A"

        android:layout_marginBottom="7dp"
        android:layout_marginLeft="24dp"
        />

    <!-- recycalerview Saving Goals -->
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="86dp"
        app:layout_constraintTop_toTopOf="@+id/vDetailBG"
        app:layout_constraintLeft_toLeftOf="@id/vDetailBG"
        app:layout_constraintRight_toRightOf="@+id/vDetailBG"
        android:id="@+id/rcvSavingGoals"

        android:background="#FFFFFF"

        android:importantForAccessibility="no"

        android:layout_marginTop="207dp"
        />

    <!-- "Spending Analysis" -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/vDetailBG"
        app:layout_constraintBottom_toTopOf="@id/vSpendingAnalisisBG"

        android:text="Spending Analysis"
        android:textFontWeight="600"
        android:textSize="15sp"
        android:lineHeight="22sp"
        android:textColor="#30437A"

        android:layout_marginBottom="7dp"
        android:layout_marginLeft="24dp"/>

    <!-- background spending analysis -->
    <View
        android:layout_width="match_parent"
        android:layout_height="244dp"
        app:layout_constraintTop_toTopOf="@+id/vDetailBG"
        app:layout_constraintLeft_toLeftOf="@id/vDetailBG"
        app:layout_constraintRight_toRightOf="@id/vDetailBG"
        android:id="@+id/vSpendingAnalisisBG"

        android:background="@drawable/bg_rounded_20_white"

        android:layout_marginTop="336dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        />

    <!-- day button -->
    <TextView
        android:layout_width="87dp"
        android:layout_height="31dp"
        app:layout_constraintTop_toTopOf="@+id/vSpendingAnalisisBG"
        app:layout_constraintLeft_toLeftOf="@id/vSpendingAnalisisBG"
        app:layout_constraintRight_toRightOf="@+id/vSpendingAnalisisBG"
        android:id="@+id/tvDay"

        android:background="@drawable/bg_rounded_20_white"

        android:gravity="center"

        android:text="Day"
        android:textFontWeight="800"
        android:textSize="15sp"
        android:lineHeight="22sp"
        android:textColor="#30437A"

        android:layout_marginTop="22dp"
        android:layout_marginRight="230dp"
        />

    <!-- line 1 -->
    <FrameLayout
        android:layout_width="2dp"
        android:layout_height="22dp"
        app:layout_constraintTop_toTopOf="@+id/vSpendingAnalisisBG"
        app:layout_constraintLeft_toLeftOf="@id/vSpendingAnalisisBG"
        app:layout_constraintRight_toRightOf="@+id/vSpendingAnalisisBG"

        android:background="@drawable/bg_rounded_50_white"
        android:backgroundTint="#30437A"

        android:layout_marginTop="26dp"
        android:layout_marginRight="115dp"
        />

    <!-- month button -->
    <TextView
        android:layout_width="87dp"
        android:layout_height="31dp"
        app:layout_constraintTop_toTopOf="@+id/vSpendingAnalisisBG"
        app:layout_constraintLeft_toLeftOf="@id/vSpendingAnalisisBG"
        app:layout_constraintRight_toRightOf="@+id/vSpendingAnalisisBG"
        android:id="@+id/tvMonth"

        android:background="@drawable/bg_rounded_20_white"
        android:gravity="center"

        android:text="Month"
        android:textFontWeight="800"
        android:textSize="15sp"
        android:lineHeight="22sp"
        android:textColor="#30437A"

        android:layout_marginTop="22dp"
        />

    <!-- lne 2 -->
    <FrameLayout
        android:layout_width="2dp"
        android:layout_height="22dp"
        app:layout_constraintTop_toTopOf="@+id/vSpendingAnalisisBG"
        app:layout_constraintLeft_toLeftOf="@id/vSpendingAnalisisBG"
        app:layout_constraintRight_toRightOf="@+id/vSpendingAnalisisBG"

        android:backgroundTint="#30437A"
        android:background="@drawable/bg_rounded_50_white"

        android:layout_marginTop="26dp"
        android:layout_marginLeft="115dp"
        />

    <!-- year button -->
    <TextView
        android:layout_width="87dp"
        android:layout_height="31dp"
        app:layout_constraintTop_toTopOf="@+id/vSpendingAnalisisBG"
        app:layout_constraintLeft_toLeftOf="@id/vSpendingAnalisisBG"
        app:layout_constraintRight_toRightOf="@+id/vSpendingAnalisisBG"
        android:id="@+id/tvYear"

        android:background="@drawable/bg_rounded_20_white"
        android:gravity="center"

        android:text="Year"
        android:textFontWeight="800"
        android:textSize="15sp"
        android:lineHeight="22sp"
        android:textColor="#30437A"

        android:layout_marginTop="22dp"
        android:layout_marginLeft="230dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>




